{% extends 'base.html.twig' %}

{% block title %}{{ titre_page }}{% endblock %}

{% block body %}
    {% if error %}
        <div class="callout alert">
            <span>{{ error.messageKey|trans(error.messageData, 'security') }}</span>
        </div>
    {% endif %}
    <form method="post">
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email"
                   placeholder="Votre identifiant de connexion" name="email"
                   value="{{ last_username }}" autofocus required/>
        </div>
        <div class="form-group">
            <label for="password">Mot de passe</label>
            <input type="password" class="form-control" id="password" name="password"
                   placeholder="Votre mot de passe de connexion"/>
        </div>
        <div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
        </div>
        <div class="form-group form-check">
            <input type="checkbox" class="form-check-input" id="rm">
            <label class="form-check-label" for="rm">Remember me</label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
{% endblock %}
